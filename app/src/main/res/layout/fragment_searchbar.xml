<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SearchbarFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="search..."
        android:textColorHint="@color/dark_green"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/highlight_pink"
        app:boxStrokeErrorColor="@color/red"
        app:boxStrokeWidth="0dp"
        app:counterOverflowTextColor="@color/red"
        app:endIconContentDescription="Search Icon"
        app:endIconDrawable="@drawable/search_icon"
        app:endIconMode="clear_text"
        app:errorTextColor="@color/red"
        app:hintTextColor="@color/dark_green">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_search_material"
            style="@style/RobotoMonoRegular16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_green"
            android:textColorHighlight="@color/dark_green"
            android:textColorHint="@color/dark_green"
            android:textColorLink="@color/dusty_pink" />

    </com.google.android.material.textfield.TextInputLayout>


    </FrameLayout>